{% extends "base.twig" %}

{% block title %}Regisration{% endblock %}

{% block head %}
  {{ parent() }}
{% endblock %}

{% block content %}
  <h2>Welcome to the registration page</h2>

<div class="flex-center">
  {% if message %}
    <div class="alert alert-danger">{{message}}</div>    
  {% endif %}

  <form method="post" class="form-horizontal" action="/signup">
    <div class="form-group col-md-12">
      <label class="control-label col-sm-4" for="lastname">Lastname:</label><br>
      <div class="col-sm-8">
        <input class="form-control" type="text" name="lastname" placeholder="RAMBO" required>
        </div>
      </div>
    
    <div class="form-group col-md-12">
      <label class="control-label col-sm-4" for="firstname">Firstname:</label><br>
      <div class="col-sm-8">
        <input class="form-control" type="text" name="firstname" placeholder="John" required>
        </div>
      </div>

    <div class="form-group col-md-12">
      <label class="control-label col-sm-4" for="nickname">Nickname:</label><br>
      <div class="col-sm-8">
        <input class="form-control" type="text" name="nickname" placeholder="Vegeta44" required>
        </div>
      </div>

    <div class="form-group col-md-12">
      <label class="control-label col-sm-4" for="email">Email:</label><br>
      <div class="col-sm-8">
        <input class="form-control" type="mail" name="email" placeholder="jean.dupont@tld.fr" required>
        </div>
      </div>

    <div class="form-group col-md-12">
      <label class="control-label col-sm-4" for="password">Password:</label><br>
      <div class="col-sm-8">
        <input class="form-control" type="password" name="password" required>
        </div>
      </div>

    <div class="form-group col-md-12">
      <label class="control-label col-sm-4" for="password_confirm">Please confirm your password:</label><br>
      <div class="col-sm-8">
        <input class="form-control" type="password" name="password_confirm" required>
        </div>
      </div>

    <div class="form-group col-md-12">
      <label class="control-label col-sm-4" for="birthdate">Birthdate:</label><br>
      <div class="col-sm-8">
        <input class="form-control" type="date" name="birthdate" required>
        </div>
      </div>

      <div class="form-group col-md-12">
          <label class="control-label col-sm-4" for="gender">Gender:</label><br>
          <div class="col-sm-8">
          <select class="form-control col-sm-8" name="gender" required="required">
              <option>Man</option>
              <option>Woman</option>
              <option>Other</option>
          </select>
          </div>
      </div>

    <div class="form-group col-md-12">
      <label class="control-label col-sm-4" for="presentation">Presentation:</label><br>
      <div class="col-sm-8">
        <textarea class="form-control" name="presentation"></textarea>
        </div>
    </div>

    <div class="form-group col-md-12">
      <label class="control-label col-sm-4" for="picture">Picture:</label><br>
      <div class="col-sm-8">
      <textarea class="form-control" name="picture"></textarea>
      </div>
    </div>

    <div>
        <input class="btn btn-primary" type="submit" name="btn_submit" id="btn_submit">
    </div>
  </form>
</div>
  
{% endblock %}