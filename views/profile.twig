{% extends "base.twig" %}

{% block title %}Profile{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <h2>My Profile</h2>

    <form method="post" class="form-horizontal" action="/profile">
        <div class="form-group col-md-12">
            <label class="control-label col-sm-4" for="lastname">Lastname:</label><br>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="lastname" placeholder="RAMBO" {% if user %} value="{{ user.local.lastname }}" {% endif %} required="required">
            </div>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label col-sm-4" for="firstname">Firstname:</label><br>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="firstname" placeholder="John" {% if user %} value="{{ user.local.firstname }}" {% endif %} required="required">
            </div>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label col-sm-4" for="nickname">Nickname:</label><br>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="nickname" placeholder="Vegeta44" {% if user %} value="{{ user.local.nickname }}" {% endif %} required="required">
            </div>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label col-sm-4" for="email">Email:</label><br>
            <div class="col-sm-8">
                <input class="form-control" type="mail" name="email" placeholder="jean.dupont@tld.fr" {% if user %} value="{{ user.local.email }}" {% endif %} disabled="disabled">
            </div>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label col-sm-4" for="password">New password:</label><br>
            <div class="col-sm-8">
                <input class="form-control" type="password" name="password">
            </div>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label col-sm-4" for="password_confirm">Please confirm your new password:</label><br>
            <div class="col-sm-8">
                <input class="form-control" type="password" name="password_confirm">
            </div>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label col-sm-4" for="birthdate">Birthdate:</label><br>
            <div class="col-sm-8">
                <input class="form-control" type="date" name="birthdate" {% if user %} value="{{ user.local.birthdate | date('Y-m-d') }}" {% endif %} required="required">
            </div>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label col-sm-4" for="gender">Gender:</label><br>
            <div class="col-sm-8">
            <select class="form-control col-sm-8" name="gender" required="required">
                <option {% if user and user.local.gender == "Man" %} selected{% endif %}>Man</option>
                <option {% if user and user.local.gender == "Woman" %} selected{% endif %}>Woman</option>
                <option {% if user and user.local.gender == "Other" %} selected{% endif %}>Other</option>
            </select>
            </div>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label col-sm-4" for="presentation">Presentation:</label><br>
            <div class="col-sm-8">
                <textarea class="form-control" name="presentation">
                {% if user %}{{ user.local.presentation }}{% endif %}
            </textarea>
          </div>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label col-sm-4" for="picture">Picture:</label><br>
            <div class="col-sm-8">
                <textarea class="form-control" name="picture">
                  {% if user %}{{ user.local.picture }}{% endif %}
              </textarea>
            </div>
        </div>

        <div>
            <input class="btn btn-primary" type="submit" name="btn_submit" id="btn_submit">
        </div>

    </form>

{% endblock %}